@{
}
<form method="POST">
    <div>
        <label>Nom du produit :</label>
        <input type="text" name="@nameof(Model.ProductName)" />
    </div>
    <div>
        <label>Description du produit</label>
        <input type="text" name="@nameof(Model.ProductDescription)" />
    </div>
    @*<div>
        <label>Vendu par :</label>
        <input type="text" name="@nameof(Model.SellerName)" />
    </div>*@
    <div>
        <label>Prix :</label>
        <input type="number" name="@nameof(Model.Price)" />
    </div>
    <div>
        <label>Nom de l'image</label>
        <input type="text" name="@nameof(Model.PicsUrl)" />
    </div>
    <div>
        <label>Couleur :</label>
        <input type="text" name="@nameof(Model.Color)" />
    </div>
    <div>
        <label>Volume : (en m³) </label>
        <input type="number" name="@nameof(Model.Volume)" />
    </div>
    <div>
        <label>Poids : (en gramme)</label>
        <input type="number" name="@nameof(Model.Weigth)" />
    </div>
    <div>
        <label>Modèle :</label>
        <input type="text" name="@nameof(Model.Model)" />
    </div>
    <input type="submit" value="Enregistrer"/>
</form>